"Water"
{
	<dx90
	{
		 	"$fallbackmaterial" "frankenizer/water_abbey_cheap"
	}
	"%keywords" "tf"
//	$forcecheap 1
	
	"%tooltexture" "dev/tfwater_normal"
	"%compilewater" 1
	"$abovewater" 1
//	"$nofresnel" "1"

	"$envmap" "env_cubemap"	
	"$refracttexture" "_rt_WaterRefraction"

	"$refractamount" "0.2"

//	"$refracttint" "{184 191 208}"
//	"$refracttint" "{134 220 238}" //weird dusty rose color
//	"$refracttint" "{148 167 195}" //Light sky blue
	"$refracttint" "{217 226 231}" //very very light blue
	"$refractblur" "0"

	"$reflecttexture" "_rt_WaterReflection"
	"$reflectamount" "1"
//	"$reflecttint" "{208 157 155}"
	"$reflecttint" "{217 226 231}" //very very light blue
//	"$reflectsaturation" "[0 0 1]"

	"$scale" "[1 1]"

//	"$bumpmap" "water/dx80_tfwater001_dudv"
//	"$bumpmap" "water/scrolling_water01_normal"
	"$normalmap" "water/scrolling_water01_normal"
//	"$normalmap" "water/tfwater001_normal"

	"$surfaceprop" "water"
	"$bottommaterial" "water/water_well_beneath.vmt"
	"$bumpframe" "0"

	"$fogenable" 1
//	"$fogcolor" "{52 137 135}"
//	"$fogcolor" "{148 167 195}" //Light sky blue
	"$fogcolor" "{104 141 193}" //saturated blue
	"$fogstart" "1"
	"$fogend" "400"

	 "$temp" "[0 0]"
	 "$curr" 0.0
	 "$curr2" 0.0



	"Proxies"
	{
		"AnimatedTexture"
		{
			"animatedtexturevar" "$normalmap"
			"animatedtextureframenumvar" "$bumpframe"
			"animatedtextureframerate" 10.00
		}

		"Sine"
		{
			"sineperiod" "24"
			"sinemin" -0.5
			"sinemax" 0.5
			"resultVar" "$curr"
		}
		"Sine"
		{
			"sineperiod" "16"
			"sinemin" 0.5
			"sinemax" -0.5
			"resultVar" "$curr2"
		}

		"Equals"
		{
			"srcVar1" "$curr2"
			"resultVar" "$temp[0]"
		}
		"Equals"
		{
			"srcVar1" "$curr"
			"resultVar" "$temp[1]"
		}

 
		"TextureTransform"
		{
			"translateVar" "$temp"
			"resultVar" "$bumptransform"
		}  

		"TextureScroll"
		{
			"texturescrollvar" "$bumptransform"
			"texturescrollrate" 0.1
			"texturescrollangle" 315.00
		}
		"WaterLOD"
		{
			// fixme!  This has to be here, or material loading barfs.
			"dummy" 0
		}
	}
}
